generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
    id         Int      @id @default(autoincrement())
    name       String? 
    email      String   @unique
    password   String? 
    post       Post[]
    comment    Comment[]
    created_at DateTime @default(now())
}

model Post {
  id Int @id @default(autoincrement())
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  comment Comment[]
  user_id Int
  title String
  description String
  comment_count Int @default(0)
  created_at DateTime @default(now())
}

model Comment {
  id String @id @default(uuid())  // 32 bit character log // id vs uuid   // sorting req id //  security and supporting uuid // big db and unique key want
  post Post @relation(fields: [post_id], references: [id], onDelete: Cascade)
  post_id Int 
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id Int
  comment String 
  created_at DateTime @default(now())
}